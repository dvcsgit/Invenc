<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="箱號："
            android:inputType="textCapCharacters"
            android:textSize="@dimen/text_size_large"/>
        <EditText
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_large"
            android:inputType="textCapCharacters"
            android:id="@+id/edBoxNumber"
            android:maxLength="7"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linEnterBarcode">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="批號："
            android:textSize="@dimen/text_size_large"/>
        <EditText
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_large"
            android:inputType="textCapCharacters"
            android:id="@+id/edProductCode"
            android:maxLength="5"/>
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="等級："
        android:textSize="@dimen/text_size_large"/>
    <EditText
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:inputType="textCapCharacters"
        android:textSize="@dimen/text_size_large"
        android:id="@+id/edClassLevel"
        android:maxLength="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="毛重："
            android:textSize="@dimen/text_size_large"/>
        <EditText
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_large"
            android:id="@+id/edGrossWeight"
            android:maxLength="4"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="淨重："
            android:textSize="@dimen/text_size_large"/>
        <EditText
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_large"
            android:id="@+id/edNetWeight"
            android:maxLength="4"
            android:inputType="number"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/btnCancel"
                android:background="@drawable/btn_blue_no_corner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="取消"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/btnSave"
                android:background="@drawable/btn_blue_no_corner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="確定"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>